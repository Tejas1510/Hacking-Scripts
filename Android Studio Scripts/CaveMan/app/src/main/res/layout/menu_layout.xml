<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">

      <ImageView 
        android:id="@+id/mainMenuBackground"
        android:src="@drawable/menuback1"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
          android:contentDescription="@null" />

      <Button
        android:id="@+id/Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
          android:layout_marginTop="20dip"
        android:background="@layout/gamebutton_layout"
        android:soundEffectsEnabled="false" />

      <Button
        android:id="@+id/Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/Game"
        android:layout_marginTop="30dip"
        android:background="@layout/optionsbutton_layout"
        android:soundEffectsEnabled="false" />
      <!--
      <Button
        android:id="@+id/Highscores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/Options"
          android:layout_marginTop="20dip"
        android:background="@layout/highbutton_layout"
        android:soundEffectsEnabled="false" />
      -->

      <Button
        android:id="@+id/Help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/Options"
          android:layout_marginTop="30dip"
        android:background="@layout/helpbutton_layout"
        android:soundEffectsEnabled="false" />

      <Button
        android:id="@+id/Credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/Help"
          android:layout_marginTop="30dip"
        android:background="@layout/creditsbutton_layout"
        android:soundEffectsEnabled="false" />

      <Button
          android:id="@+id/i_about"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_below="@id/Credits"
          android:layout_marginTop="30dp"
          android:background="@layout/ibutton_layout"
          android:soundEffectsEnabled="false" />

      <Button
          android:id="@+id/click_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="40dip"
          android:layout_marginTop="20dip"
          android:background="@layout/clickbutton_layout"
          android:soundEffectsEnabled="false"/>

      <ImageView
          android:id="@+id/arrow_image1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="35dip"
          android:layout_marginTop="100dip"
          android:src="@drawable/arrow1" />


</RelativeLayout>
